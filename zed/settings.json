// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "show_edit_predictions": false,
  "chat_panel": {
    "dock": "right"
  },
  "vim": {
    "use_system_clipboard": "on_yank"
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "vim_mode": true,
  "theme": "Zedokai Darker (Filter Ristretto)",
  "icon_theme": "Material Icon Theme",
  "ui_font_size": 14,
  "buffer_font_size": 12.0,
  "buffer_font_features": {
    "calt": false,
    "liga": false,
    "cv02": false
  },
  "tab_size": 2,
  "journal": {
    "path": "~",
    "hour_format": "hour24"
  },
  "terminal": {
    "toolbar": {
      "breadcrumbs": false
    },
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
  },
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": false,
    "show_parameter_hints": false,
    "show_other_hints": false
  },
  "preferred_line_length": 100,
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "left_neighbour",
    "show_close_button": "hidden"
  },
  "toolbar": {
    "quick_actions": false
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": false
  },
  "seed_search_query_from_cursor": "selection",
  "use_smartcase_search": true,
  "languages": {
    "JavaScript": {
      "wrap_guides": [100],
      "soft_wrap": "bounded",
      "format_on_save": "on",
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "TypeScript": {
      "wrap_guides": [100],
      "soft_wrap": "bounded",
      "format_on_save": "on",
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true,
          "source.organizeImports": true
        }
      }
    },
    "JSX": {
      "wrap_guides": [100],
      "soft_wrap": "bounded",
      "format_on_save": "on",
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true,
          "source.organizeImports": true
        }
      }
    },
    "TSX": {
      "wrap_guides": [100],
      "soft_wrap": "bounded",
      "format_on_save": "on",
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true,
          "source.organizeImports": true
        }
      }
    },
    "JSON": {
      "soft_wrap": "bounded",
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "SCSS": {
      "formatter": {
        "code_actions": {
          "source.fixAll.stylelint": true
        }
      }
    },
    "Git Commit": {
      "wrap_guides": [50, 72],
      "preferred_line_length": 72
    },
    "YAML": {
      "format_on_save": "off"
    }
  },
  "file_types": {
    "SCSS": ["*.SCSS"], // Were still being treated as .css files
    "Terraform": ["*.tofu"]
  },
  "lsp": {
    "eslint": {
      "settings": {
        "problems": {
          "shortenToSingleLine": true
        },
        "workingDirectory": {
          "mode": "auto"
        }
      }
    },
    "json-language-server": {
      "settings": {
        "json": {
          "keyOrdering": true,
          "schemas": [
            {
              "fileMatch": ["nodemon.json"],
              "url": "https://json.schemastore.org/nodemon.json"
            }
          ]
        }
      }
    }
  }
}
