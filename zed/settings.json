// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "show_inline_completions": false,
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "vim_mode": true,
  "theme": "Zedokai Classic",
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "buffer_font_features": {
    "calt": false,
    "liga": false,
    "cv02": false
  },
  "journal": {
    "path": "~",
    "hour_format": "hour24"
  },
  "terminal": {
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
  },
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "preferred_line_length": 100,
  "languages": {
    "JavaScript": {
      "wrap_guides": [100],
      "format_on_save": "on",
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "TypeScript": {
      "wrap_guides": [100],
      "format_on_save": "on",
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "JSX": {
      "wrap_guides": [100],
      "format_on_save": "on",
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "TSX": {
      "wrap_guides": [100],
      "format_on_save": "on",
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "JSON": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "SCSS": {
      "formatter": {
        "code_actions": {
          "source.fixAll.stylelint": true
        }
      },
      "tab_size": 2
    },
    "Git Commit": {
      "wrap_guides": [50, 72],
      "preferred_line_length": 72
    }
  },
  "file_types": {
    "SCSS": ["*.SCSS"] // Were still being treated as .css files
  }
}
