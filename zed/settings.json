// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "chat_panel": {
    "dock": "right"
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank"
  },
  "show_edit_predictions": false,
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "theme": "Zedokai Darker (Filter Ristretto)",
  "ui_font_size": 14,
  "buffer_font_size": 12.0,
  "buffer_font_features": {
    "calt": false,
    "liga": false,
    "cv02": false
  },
  "tab_size": 2,
  "journal": {
    "path": "~",
    "hour_format": "hour24"
  },
  "terminal": {
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
  },
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": false,
    "show_parameter_hints": false,
    "show_other_hints": false
  },
  "preferred_line_length": 100,
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "file_scan_exclusions": ["**/.bundle", "**/vendor/bundle"],
  "languages": {
    "JavaScript": {
      "wrap_guides": [100],
      "format_on_save": "on",
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "TypeScript": {
      "wrap_guides": [100],
      "format_on_save": "on",
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "JSX": {
      "wrap_guides": [100],
      "format_on_save": "on",
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "TSX": {
      "wrap_guides": [100],
      "format_on_save": "on",
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "JSON": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "SCSS": {
      "formatter": {
        "code_actions": {
          "source.fixAll.stylelint": true
        }
      }
    },
    "Git Commit": {
      "wrap_guides": [50, 72],
      "preferred_line_length": 72
    },
    "YAML": {
      "format_on_save": "off"
    }
  },
  "file_types": {
    "SCSS": ["*.SCSS"], // Were still being treated as .css files
    "Terraform": ["*.tofu"] // tofu is not supported yet
  },
  "lsp": {
    "eslint": {
      "settings": {
        "problems": {
          "shortenToSingleLine": true
        },
        "workingDirectory": {
          "mode": "auto"
        }
      }
    }
  }
}
